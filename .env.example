# Shared Supabase
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=voice-audio

# Backend
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000
MAX_AUDIO_MB=10

# Frontend (set in frontend/.env.local or Vercel env settings)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Worker
WORKER_POLL_SECONDS=2
WORKER_BATCH_SIZE=10
WORKER_MAX_ATTEMPTS=3
SUPABASE_CLAIM_RETRIES=3
SUPABASE_CLAIM_RETRY_BASE_SECONDS=0.5
WHISPER_MODEL_SIZE=small
SUMMARIZER_MAX_BULLETS=5

# Mailjet (Send API v3.1)
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_API_SECRET=your-mailjet-api-secret
MAILJET_BASE_URL=https://api.mailjet.com
MAILJET_FROM_EMAIL=no-reply@example.com
MAILJET_FROM_NAME=Voice Agent
MAILJET_TIMEOUT_SECONDS=20
EMAIL_SUBJECT=Your conversation summary
EMAIL_REPLY_TO=
